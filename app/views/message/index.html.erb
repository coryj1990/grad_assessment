<p>Provide your name and a brief message to post to this page!</p>

<%= render 'form' %>

<h3>Previously added posts</h3>

<table>
  	<thead>
    	<tr>
      		<th>Name</th>
      		<th>Message</th>
      		<th>Time</th>
    	</tr>
  	</thead>

	<tbody>
	    <% @posts.each do |post| %>
	      	<tr>
	        	<td><%= post.name %></td>
	        	<td><%= post.message %></td>
	        	<td><%= post.dif %></td>
	      	</tr>
	    <% end %>
	</tbody>
</table>

<%= @time %>